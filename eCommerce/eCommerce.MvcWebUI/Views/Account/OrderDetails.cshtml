@model eCommerce.Entities.Model.OrderDetailsModel

    <div class="container mt-5 mb-5">
        <div class="row">
            <div class="col-md-12">
                <h3>Order <strong>@Model.OrderNumber</strong>  Details</h3>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">OrderNumber</dt>
                    <dd class="col-sm-9">@Model.OrderNumber</dd>

                    <dt class="col-sm-3">Address</dt>
                    <dd class="col-sm-9">@Model.Address</dd>

                    <dt class="col-sm-3">OrderDate</dt>
                    <dd class="col-sm-9">@Model.OrderDate</dd>

                    <dt class="col-sm-3">Total</dt>
                    <dd class="col-sm-9">@Model.Total.ToString("c")</dd>

                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">
                        @if (Model.OrderState.ToString() == "False")
                        {
                        <span class="badge" style="background-color:red;color:white">Waiting</span>
                        }
                        else
                        {
                            <span class="badge" style="background-color:green;color:white">Completed</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Detaylar</dt>
                    <dd class="col-sm-9">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <td>RestaurantName</td>
                                    <th>ProductName</th>
                                    <th>Description</th>
                                    <th style="width:10%">Quantity</th>
                                    <th>Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderLines)
                                {
                                    <tr>
                                        <td>@item.RestaurantName</td>
                                        <td>@item.ProductName</td>
                                        <td>@item.Description</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.Price.ToString("c")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </dd>
                </dl>
            </div>
        </div>
    </div>
