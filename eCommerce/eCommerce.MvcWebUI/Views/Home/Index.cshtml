@model IEnumerable<eCommerce.Entities.Model.City>
@{
    ViewBag.Title = "Index";
}




<div class="jumbotron">
    <div class="container text-center">
        <h1 class="display-4">Hemen siparişini ver !</h1>
        <p class="lead">Tek tıkla kolayca sipariş verebilirsin. Önce şehrini seç.</p>
        <hr class="my-4">
        @foreach (var city in Model)
        {
            <a href="/Restaurant/Index/@city.CityID" class="btn btn-outline-danger my-2">@city.CityName</a>
        }
    </div>
</div>

