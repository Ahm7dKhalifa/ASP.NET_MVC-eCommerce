@model eCommerce.Entities.Model.ShippingDetails
@{
    ViewBag.Title = "Checkout";
}
    <div class="jumbotron-fluid" style="background-image: url(https://assets.yemeksepeti.com/images/Gorseller/Profil.jpg?v=d9409400fbd432a6f6d6644f8649da0686eb6f50);
        height: 100px;
        background-size: cover">
     


    </div>
    <div class="container mt-5">
            <div class="row">
                <div class="col-md-4 order-md-2 mb-4 mt-5">
                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                        Payment
                    </h4>
                    <div class="d-block my-3">

                        <div class="custom-control custom-radio">
                            <input id="credit" name="PaymentType" type="radio" class="custom-control-input" value="Nakit">
                            <label class="custom-control-label" for="credit">Nakit(Kapıda Ödeme)</label>
                        </div>
                        <div class="custom-control custom-radio">
                            <input id="debit" name="PaymentType" type="radio" class="custom-control-input">
                            <label class="custom-control-label" for="debit">Kart(Kapıda Ödeme)</label>
                        </div>
                        <div class="custom-control custom-radio">
                            <input id="paypal" name="PaymentType" type="radio" class="custom-control-input">
                            <label class="custom-control-label" for="paypal">Kart(online)</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="cc-name">Name on card</label>
                            <input type="text" class="form-control" id="cc-name" placeholder="">
                            <small class="text-muted">Full name as displayed</small>
                            <div class="invalid-feedback">
                                Name on card is required
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="cc-expiration">Expiration</label>
                            <input type="month" class="form-control" id="cc-expiration" placeholder="">
                            <div class="invalid-feedback">
                                Expiration date required
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label for="cc-number">Credit card number</label>
                            <input type="text" class="form-control" id="cc-number" placeholder="">
                            <div class="invalid-feedback">
                                Credit card number is required
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="cc-cvv">CVV</label>
                            <input type="text" class="form-control" id="cc-cvv" placeholder="">
                            <div class="invalid-feedback">
                                Security code required
                            </div>
                        </div>


                    </div>

                    <hr class="mb-4">
                </div>
                <div class="col-md-8 order-md-1">
                    <h4 class="mb-3">Billing address</h4>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary()
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="firstName">First name</label>
                                @Html.TextBoxFor(x => x.Firstname, new { placeholder = "First Name", @class = "form-control", @type = "text", @readonly = "readonly" })
                                <div class="invalid-feedback">
                                    Valid first name is required.
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="lastName">Last name</label>
                                @Html.TextBoxFor(x => x.Lastname, new { placeholder = "Last Name", @class = "form-control", @type = "text", @readonly = "readonly" })
                                <div class="invalid-feedback">
                                    Valid last name is required.
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="username">Username</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">@@</span>
                                </div>
                                @Html.TextBoxFor(x => x.Username, new { placeholder = "Username", @class = "form-control", @type = "text", @readonly = "readonly" })
                                <div class="invalid-feedback" style="width: 100%;">
                                    Your username is required.
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="email">Email <span class="text-muted">(Optional)</span></label>
                            @Html.TextBoxFor(x => x.Email, new { placeholder = "E-mail", @class = "form-control", @type = "email", @readonly = "readonly" })
                            <div class="invalid-feedback">
                                Please enter a valid email address for shipping updates.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="address">Address</label>
                            @Html.TextAreaFor(x => x.Address, new { placeholder = "Address", @class = "form-control", @type = "text" })
                            <div class="invalid-feedback">
                                Please enter your shipping address.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="address">Description</label>
                            @Html.TextBoxFor(x => x.Description, new { placeholder = "Note", @class = "form-control", @type = "text" })
                        </div>

                        <div class="row">
                            <div class="col-md-5 mb-3">
                                <label for="country">Country</label>
                                @Html.TextBoxFor(x => x.Country, new { placeholder = "Country", @class = "form-control", @type = "text", @readonly = "readonly" })
                                <div class="invalid-feedback">
                                    Please select a valid country.
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="state">City</label>
                                @Html.TextBoxFor(x => x.City, new { placeholder = "City", @class = "form-control", @type = "text", @readonly = "readonly" })
                                <div class="invalid-feedback">
                                    Please provide a valid state.
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="zip">PhoneNumber</label>
                                @Html.TextBoxFor(x => x.PhoneNumber, new { placeholder = "Phone Number", @class = "form-control", @type = "text", @readonly = "readonly" })
                                <div class="invalid-feedback">
                                    Zip code required.
                                </div>
                            </div>
                        </div>
                        <input type="submit" class="btn btn-success pull-right" value="Siparişi Tamamla" />
                    }

                </div>
            </div>
            
        

        <footer class="my-5 pt-5 text-muted text-center text-small">
        </footer>
    </div>

